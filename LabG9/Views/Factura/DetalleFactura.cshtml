@model List<LabG9.Models.DetalleFactura>

<h2>Detalle de Factura</h2>

<h4>Factura No: @ViewBag.Factura.IdFactura</h4>
<p>Fecha: @ViewBag.Factura.FechaPedido</p>
<p>Total: @ViewBag.Factura.totalFactura</p>
<p>Estado: @ViewBag.Factura.Estado</p>
<p>Dirección de Entrega: @ViewBag.Factura.DireccionEntrega</p>

<h3>Detalles</h3>
<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model)
        {
            <tr>
                <td>@detalle.Producto.Nombre</td> 
                <td>@detalle.Cantidad</td>
                <td>@detalle.PrecioUnitario</td>
                <td>@(detalle.Cantidad * detalle.PrecioUnitario)</td>
            </tr>
        }
    </tbody>
</table>
